{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-extra-parens": [
      "error",
      "all",
      {
        "nestedBinaryExpressions": false
      }
    ],
    "no-unsafe-negation": "error",
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "_buildCleanPayload",
          "_normalizeSingleRecord"
        ]
      }
    ],
    "curly": "error",
    "dot-location": [
      "error",
      "property"
    ],
    "newline-after-var": "error",
    "dot-notation": "error",
    "eqeqeq": "error",
    "no-eq-null": "error",
    "no-eval": "error",
    "no-else-return": "error",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-floating-decimal": "error",
    "no-invalid-this": "error",
    "no-lone-blocks": "error",
    "no-loop-func": "error",
    "no-multi-spaces": "error",
    "no-new-func": "error",
    "no-new-wrappers": "error",
    "no-new": "error",
    "no-script-url": "error",
    "no-self-compare": "error",
    "no-sequences": "error",
    "no-throw-literal": "error",
    "no-unmodified-loop-condition": "error",
    "no-unused-expressions": "error",
    "no-useless-call": "error",
    "no-useless-concat": "error",
    "no-useless-escape": "error",
    "strict": [
      "error",
      "global"
    ],
    "callback-return": [
      "error",
      [
        "callback",
        "cb",
        "next",
        "_next",
        "_done",
        "_accept",
        "_reject",
        "_cb",
        "_callback"
      ]
    ],
    "no-new-require": "error",
    "no-mixed-requires": "error",
    "handle-callback-err": "error",
    "no-sync": "error",
    "array-bracket-spacing": "error",
    "block-spacing": "error",
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "camelcase": "error",
    "comma-dangle": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": "error",
    "computed-property-spacing": "error",
    "consistent-this": [
      "error",
      "self"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "func-call-spacing": [
      "error",
      "never"
    ],
    "func-names": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      4
    ],
    "key-spacing": "error",
    "lines-around-directive": "error",
    "max-depth": "error",
    "max-len": [
      "error",
      100
    ],
    "max-lines": [
      "error",
      {
        "max": 500,
        "skipBlankLines": true
      }
    ],
    "max-nested-callbacks": [
      "error",
      4
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptions": [
          "Router",
          "Sequelize"
        ]
      }
    ],
    "new-parens": "error",
    "newline-before-return": "error",
    "no-lonely-if": "error",
    "no-mixed-spaces-and-tabs": "error",
    "no-multiple-empty-lines": "error",
    "no-negated-condition": "error",
    "no-trailing-spaces": "error",
    "no-unneeded-ternary": "error",
    "no-whitespace-before-property": "error",
    "object-curly-newline": [
      "error",
      {
        "multiline": true,
        "minProperties": 3
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "one-var-declaration-per-line": [
      "error",
      "initializations"
    ],
    "one-var": [
      "error",
      "never"
    ],
    "operator-assignment": [
      "error",
      "always"
    ],
    "operator-linebreak": [
      "error",
      "after"
    ],
    "padded-blocks": [
      "error",
      "never"
    ],
    "quote-props": [
      "error",
      "consistent"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi-spacing": "error",
    "semi": [
      "error",
      "always"
    ],
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ],
    "space-unary-ops": "error",
    "unicode-bom": [
      "error",
      "never"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "arrow-spacing": "error",
    "generator-star-spacing": [
      "error",
      {
        "before": true,
        "after": false
      }
    ],
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": false
      }
    ],
    "no-duplicate-imports": "error",
    "no-useless-computed-key": "error",
    "no-useless-constructor": "error",
    "no-useless-rename": [
      "error",
      {
        "ignoreDestructuring": false,
        "ignoreImport": false,
        "ignoreExport": false
      }
    ],
    "object-shorthand": [
      2,
      "consistent"
    ],
    "prefer-arrow-callback": [
      "error",
      {
        "allowNamedFunctions": true
      }
    ],
    "prefer-const": "error",
    "prefer-numeric-literals": "error",
    "prefer-reflect": "error",
    "prefer-spread": "error",
    "prefer-template": "error",
    "rest-spread-spacing": [
      "error",
      "never"
    ],
    "symbol-description": "error",
    "template-curly-spacing": [
      "error",
      "never"
    ],
    "yield-star-spacing": [
      "error",
      {
        "before": true,
        "after": false
      }
    ],
    "keyword-spacing": 2,
    "line-comment-position": "error",
    "linebreak-style": [
      "error",
      "unix"
    ]
  },
  "env": {
    "node": true,
    "es6": true
  }
}
